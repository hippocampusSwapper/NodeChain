{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "",
    "description": "",
    "type": "object",
    "properties": {
        "transaction" : {
            "type" : "object",
            "properties": {
                "from": {
                    "type": "string"
                },
                "to": {
                    "type": "string"
                },
                "gas" : {
                    "type": "string"
                },
                "gasPrice": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "data": {
                    "type": "string"
                }
            },
            "required": [
                "to"
            ]
        },
        "blockNumber": {
            "oneOf":[
              {
              	"type":"string",
                "pattern": "[0-9]"
              },
              {
              	"type": "string",
                "enum": [
                	"latest",
                  	"earliest",
                  	"pending"
                ]
              }
            ]
        }
    },
    "required": [
        "transaction",
        "blockNumber"
    ]
}